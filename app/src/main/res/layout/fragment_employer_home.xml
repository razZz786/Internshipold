<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.project.internship.employer.fragment.EmployerHomeFragment">


    <TextView
        android:id="@+id/textView57"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@color/background"
        android:paddingTop="10dp"
        android:text="Courses"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/tx_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="Mobile Application"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/mob"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/circelborder"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tx_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="IP Addresing"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ipa"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/circelborder"
            android:gravity="center"

            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:textColor="#000"
            android:id="@+id/tx_networking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Networking"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/net"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/circelborder"
            android:gravity="center"

            android:textSize="20dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView65"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@color/background"
        android:paddingTop="10dp"
        android:text="Inbox"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/employerinboxlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
